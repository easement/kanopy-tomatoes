{
  "manifest_version": 3,
  "name": "Kanopy Rotten Tomatoes Scores",
  "version": "1.0.1",
  "description": "Shows Rotten Tomatoes scores on Kanopy video pages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.rottentomatoes.com/*",
    "https://www.kanopy.com/*",
    "https://www.letterboxd.com/*",
    "https://api.allorigins.win/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.kanopy.com/*/video/*"],
      "js": ["debug.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Kanopy RT Scores"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
